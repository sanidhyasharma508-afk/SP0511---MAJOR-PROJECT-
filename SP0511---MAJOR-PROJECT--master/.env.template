# Campus Automation Backend Configuration
# Phase 5 - Scaling, Security & Optimization

# Environment
ENV=development
DEBUG=True

# Server Configuration
HOST=127.0.0.1
PORT=8000
API_PREFIX=/api/v1

# Database Configuration
# Development: SQLite
DATABASE_URL=sqlite:///./campus_automation.db
# Production: PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/campus_automation

DATABASE_ECHO=True
DATABASE_POOL_SIZE=5
DATABASE_POOL_MAX_OVERFLOW=10

# Authentication & Security (JWT)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (Frontend Integration)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/campus_automation.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Celery Configuration (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Email Configuration (Notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@campus.edu

# Feature Flags (Phase 5)
ENABLE_CACHING=True
ENABLE_BACKGROUND_TASKS=True
ENABLE_EMAIL_NOTIFICATIONS=False

# Performance Configuration
WORKER_THREADS=4
REQUEST_TIMEOUT=30
POOL_SIZE=5

# Monitoring & Metrics
ENABLE_METRICS=True
METRICS_PORT=9090

# Allowed Origins (for CORS)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000
